<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Usuario.CategoriasPlatillos" Title="El Perolito Múzquiz">



  <ContentPage.ToolbarItems>
    <ToolbarItem x:Name="tbiCart" Icon="cart.png"></ToolbarItem>
    
  </ContentPage.ToolbarItems>
  
  <ListView x:Name="lstvCategorias" >
    <ListView.ItemTemplate>
      <DataTemplate>
        <ImageCell Text="{Binding Nombre}" ImageSource="{Binding urlImagen}"></ImageCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
  
</ContentPage>