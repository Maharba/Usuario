<ScrollView>
  <StackLayout   Margin="10">
    <Label XAlign="Center" x:Name="lblC1" FontSize="30" Text="Conocénos" TextColor="White">
      <Label.FontFamily>
        <OnPlatform x:TypeArguments="x:String">
          <OnPlatform.Android >segoeuib.ttf#segoeuib.ttf#</OnPlatform.Android>
        </OnPlatform>
      </Label.FontFamily>
    </Label>

    <Image Source="peroli.jpg" x:Name="imgPerol" Aspect="Fill"  HeightRequest="250" Margin="0,  15" ></Image>
    

    <Label XAlign="Center"  HeightRequest="220" x:Name="lblHistoria" FontSize="16" TextColor="White" Text="{Binding Historia}" >
        <Label.FontFamily>
        <OnPlatform x:TypeArguments="x:String">
          <OnPlatform.Android >segoeuil.ttf#segoeuil.ttf#</OnPlatform.Android>
        </OnPlatform>
      </Label.FontFamily>
    </Label>


  </StackLayout>

</ScrollView>
</ContentPage>