          <OnPlatform.Android >segoeuil.ttf#segoeuil.ttf#</OnPlatform.Android>
        </OnPlatform>
      </Label.FontFamily>
      </Label>
      </StackLayout>
    </ContentPage.Content>
  </ContentPage>
