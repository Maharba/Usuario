<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Usuario.CategoriasPlatillos2" Title="El Perolito Múzquiz" BackgroundColor="#660000">



  <ContentPage.ToolbarItems>
    <ToolbarItem x:Name="tbiCart" Icon="cart.png"></ToolbarItem>

  </ContentPage.ToolbarItems>
<StackLayout>
  <ListView x:Name="lstvCategorias" RowHeight="130" SeparatorVisibility="None">
    <ListView.ItemTemplate>
      <DataTemplate>
       <!-- <ImageCell Text="{Binding Nombre}" ImageSource="{Binding urlImagen}"></ImageCell>-->
        <ViewCell>
          <StackLayout Orientation="Vertical">
          <Image Source="{Binding urlImagen}" WidthRequest="900"></Image>
            
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</StackLayout>
</ContentPage>